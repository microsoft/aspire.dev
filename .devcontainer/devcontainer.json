{
  "name": "Aspire.Dev",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-22-bookworm",
  "customizations": {
    "vscode": {
      "extensions": [
        "astro-build.astro-vscode"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "forwardPorts": [4321],
  "portsAttributes": {
    "4321": {
      "label": "Astro dev server",
      "onAutoForward": "openBrowser"
    }
  },
  "postCreateCommand": "npm install && echo '\nâœ¨ Ready to go! Run \"npm run dev\" to start the dev server.\n'",
  "remoteUser": "node"
}

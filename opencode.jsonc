{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "aspire": {
      "type": "local",
      "command": [
        "aspire",
        "mcp",
        "start"
      ],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    },
    "hex1b": {
      "type": "local",
      "command": [
        "dnx",
        "Hex1b.McpServer@0.47.0",
        "--yes"
      ],
      "enabled": true
    }
  }
}
---
import ProgressTracker from "@components/InteractiveQuickstart/ProgressTracker.astro";
import CodespacesLauncher from "@components/InteractiveQuickstart/CodespacesLauncher.astro";
import CodeTourViewer from "@components/InteractiveQuickstart/CodeTourViewer.astro";
import TerminalCommandDemo from "@components/InteractiveQuickstart/TerminalCommandDemo.astro";
import CompletionCelebration from "@components/InteractiveQuickstart/CompletionCelebration.astro";

const title = "Interactive Quickstart";
const description =
    "Learn Aspire hands-on with an interactive tutorial in GitHub Codespaces. Build and run a full-stack application in minutes.";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title} | Aspire</title>
        <meta name="description" content={description} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

        <!-- Open Graph / Social Media -->
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content="https://aspire.dev/og-image.png" />

        <style is:global>
            :root {
                --sl-color-accent: #883aea;
                --sl-color-accent-low: rgba(136, 58, 234, 0.15);
                --sl-color-accent-high: #9d5aff;
                --sl-color-white: #ffffff;
                --sl-color-gray-1: #eaeaea;
                --sl-color-gray-2: #c2c2c2;
                --sl-color-gray-3: #8b8b8b;
                --sl-color-gray-4: #585858;
                --sl-color-gray-5: #383838;
                --sl-color-gray-6: #272727;
                --sl-color-black: #181818;
                --sl-color-bg: #0d0d0d;
                --sl-color-bg-nav: #1a1a1a;
                --sl-color-green: #2ea043;
                --sl-color-green-low: rgba(46, 160, 67, 0.15);
                --sl-color-green-high: #3fb950;
                --sl-color-blue: #0969da;
                --sl-color-blue-low: rgba(9, 105, 218, 0.15);
                --sl-color-purple: #8957e5;
                --sl-color-purple-low: rgba(137, 87, 229, 0.15);
            }

            * {
                box-sizing: border-box;
            }

            body {
                margin: 0;
                padding: 0;
                font-family: -apple-system, BlinkMacSystemFont, "Segoe UI",
                    Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
                background: var(--sl-color-bg);
                color: var(--sl-color-white);
                line-height: 1.6;
            }

            .page-container {
                min-height: 100vh;
            }

            .hero-section {
                background: linear-gradient(
                    135deg,
                    var(--sl-color-bg) 0%,
                    var(--sl-color-gray-6) 50%,
                    var(--sl-color-bg) 100%
                );
                padding: 4rem 2rem 2rem;
                text-align: center;
                border-bottom: 1px solid var(--sl-color-gray-5);
            }

            .hero-content {
                max-width: 900px;
                margin: 0 auto;
            }

            .hero-badge {
                display: inline-block;
                background: var(--sl-color-accent-low);
                color: var(--sl-color-accent);
                padding: 0.5rem 1rem;
                border-radius: 20px;
                font-size: 0.875rem;
                font-weight: 600;
                margin-bottom: 1.5rem;
                border: 1px solid var(--sl-color-accent);
            }

            .hero-title {
                margin: 0 0 1rem 0;
                font-size: 3.5rem;
                font-weight: 800;
                background: linear-gradient(
                    135deg,
                    var(--sl-color-white) 0%,
                    var(--sl-color-accent) 100%
                );
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                line-height: 1.2;
            }

            .hero-description {
                font-size: 1.375rem;
                color: var(--sl-color-gray-2);
                margin: 0 0 2rem 0;
                line-height: 1.6;
            }

            .hero-features {
                display: flex;
                gap: 2rem;
                justify-content: center;
                flex-wrap: wrap;
                margin-top: 2rem;
            }

            .hero-feature {
                display: flex;
                align-items: center;
                gap: 0.5rem;
                color: var(--sl-color-gray-2);
                font-size: 1rem;
            }

            .hero-feature-icon {
                color: var(--sl-color-green);
                font-size: 1.25rem;
            }

            .main-content {
                padding: 2rem 0;
            }

            .nav-header {
                background: var(--sl-color-bg-nav);
                padding: 1rem 2rem;
                border-bottom: 1px solid var(--sl-color-gray-5);
                position: sticky;
                top: 0;
                z-index: 100;
            }

            .nav-container {
                max-width: 1400px;
                margin: 0 auto;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .nav-logo {
                display: flex;
                align-items: center;
                gap: 0.75rem;
                text-decoration: none;
                color: var(--sl-color-white);
                font-size: 1.25rem;
                font-weight: 700;
            }

            .nav-logo-icon {
                font-size: 1.75rem;
            }

            .nav-links {
                display: flex;
                gap: 2rem;
                align-items: center;
            }

            .nav-link {
                color: var(--sl-color-gray-2);
                text-decoration: none;
                font-weight: 500;
                transition: color 0.2s ease;
            }

            .nav-link:hover {
                color: var(--sl-color-white);
            }

            .footer {
                background: var(--sl-color-gray-6);
                border-top: 1px solid var(--sl-color-gray-5);
                padding: 3rem 2rem;
                margin-top: 4rem;
            }

            .footer-content {
                max-width: 1200px;
                margin: 0 auto;
                text-align: center;
                color: var(--sl-color-gray-3);
            }

            .footer-links {
                display: flex;
                gap: 2rem;
                justify-content: center;
                margin-bottom: 1.5rem;
            }

            .footer-link {
                color: var(--sl-color-gray-2);
                text-decoration: none;
                transition: color 0.2s ease;
            }

            .footer-link:hover {
                color: var(--sl-color-white);
            }

            @media (max-width: 768px) {
                .hero-title {
                    font-size: 2.5rem;
                }

                .hero-description {
                    font-size: 1.125rem;
                }

                .hero-features {
                    flex-direction: column;
                    align-items: flex-start;
                    text-align: left;
                }

                .nav-links {
                    display: none;
                }
            }
        </style>
    </head>
    <body>
        <div class="page-container">
            <nav class="nav-header">
                <div class="nav-container">
                    <a href="/" class="nav-logo">
                        <span class="nav-logo-icon">âœ¨</span>
                        Aspire
                    </a>
                    <div class="nav-links">
                        <a href="/get-started/welcome" class="nav-link">Docs</a>
                        <a href="/samples" class="nav-link">Samples</a>
                        <a href="/integrations" class="nav-link">Integrations</a
                        >
                        <a
                            href="https://github.com/dotnet/aspire"
                            class="nav-link"
                            target="_blank">GitHub</a
                        >
                    </div>
                </div>
            </nav>

            <div class="hero-section">
                <div class="hero-content">
                    <div class="hero-badge">
                        ðŸŽ“ Interactive Learning Experience
                    </div>
                    <h1 class="hero-title">
                        Learn Aspire<br />Hands-On
                    </h1>
                    <p class="hero-description">
                        Build and run a full-stack application with Aspire in
                        your browser. No installation requiredâ€”just launch,
                        learn, and code.
                    </p>
                    <div class="hero-features">
                        <div class="hero-feature">
                            <span class="hero-feature-icon">âœ“</span>
                            <span>5-10 minute tutorial</span>
                        </div>
                        <div class="hero-feature">
                            <span class="hero-feature-icon">âœ“</span>
                            <span>Zero setup required</span>
                        </div>
                        <div class="hero-feature">
                            <span class="hero-feature-icon">âœ“</span>
                            <span>Real working code</span>
                        </div>
                        <div class="hero-feature">
                            <span class="hero-feature-icon">âœ“</span>
                            <span>Interactive code tour</span>
                        </div>
                    </div>
                </div>
            </div>

            <main class="main-content">
                <ProgressTracker />
                <CodespacesLauncher owner="IEvangelist" repo="fullstack-js" />
                <CodeTourViewer />
                <TerminalCommandDemo />
                <CompletionCelebration />
            </main>

            <footer class="footer">
                <div class="footer-content">
                    <div class="footer-links">
                        <a href="/get-started/welcome" class="footer-link"
                            >Documentation</a
                        >
                        <a
                            href="https://github.com/dotnet/aspire"
                            class="footer-link"
                            target="_blank">GitHub</a
                        >
                        <a
                            href="https://github.com/dotnet/aspire/issues"
                            class="footer-link"
                            target="_blank">Issues</a
                        >
                        <a
                            href="https://discord.gg/dotnet"
                            class="footer-link"
                            target="_blank">Community</a
                        >
                    </div>
                    <p>
                        Â© {new Date().getFullYear()} Microsoft Corporation. All
                        rights reserved.
                    </p>
                </div>
            </footer>
        </div>
    </body>
</html>

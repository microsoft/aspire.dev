---
import { Icon } from '@astrojs/starlight/components';
import type { StarlightIcon } from '@astrojs/starlight/types';

interface Props {
  title: string;
  highlight?: string;
  subtitle: string;
  accent?: 'purple' | 'blue' | 'green' | 'orange' | 'magenta' | 'cyan' | 'red' | 'yellow';
  primaryCta?: { label: string; href: string };
  secondaryCta?: { label: string; href: string };
  icon?: StarlightIcon;
  floatingIcons?: StarlightIcon[];
}

const {
  title,
  highlight,
  subtitle,
  accent = 'purple',
  primaryCta,
  secondaryCta,
  icon,
  floatingIcons = [],
} = Astro.props;

const accentVarMap: Record<string, string> = {
  purple: 'var(--sl-color-purple)',
  blue: 'var(--sl-color-blue)',
  green: 'var(--sl-color-green)',
  orange: 'var(--sl-color-orange)',
  magenta: 'var(--color-magenta)',
  cyan: 'var(--color-cyan)',
  red: 'var(--sl-color-red)',
  yellow: 'var(--color-yellow)',
};

const accentColor = accentVarMap[accent];

// Predefined positions and animation configs for floating icons
const floatingConfigs = [
  { top: '10%', right: '8%', size: '1.35rem', delay: '0s', duration: '7.2s' },
  { top: '62%', right: '28%', size: '1.15rem', delay: '1.4s', duration: '9s' },
  { top: '25%', right: '45%', size: '1.5rem', delay: '3.6s', duration: '6.8s' },
  { top: '78%', right: '6%', size: '1.05rem', delay: '4.2s', duration: '8.4s' },
  { top: '14%', right: '58%', size: '1.25rem', delay: '2.5s', duration: '7.6s' },
  { top: '44%', right: '3%', size: '1.1rem', delay: '5.2s', duration: '6.2s' },
];
---

<section class="topic-hero not-content" style={`--topic-accent: ${accentColor}`}>
  <div class="topic-hero-grid" aria-hidden="true"></div>
  <div class="topic-hero-content">
    {
      icon && (
        <div class="topic-hero-icon">
          <Icon name={icon} size="2.5rem" />
        </div>
      )
    }
    <h1 class="topic-hero-title">
      {title}{' '}
      {highlight && <span class="topic-hero-highlight">{highlight}</span>}
    </h1>
    <p class="topic-hero-subtitle">{subtitle}</p>
    {
      (primaryCta || secondaryCta) && (
        <div class="topic-hero-actions">
          {primaryCta && (
            <a href={primaryCta.href} class="topic-btn topic-btn-primary">
              {primaryCta.label}
              <Icon name="right-arrow" size="1.25rem" />
            </a>
          )}
          {secondaryCta && (
            <a href={secondaryCta.href} class="topic-btn topic-btn-secondary">
              {secondaryCta.label}
            </a>
          )}
        </div>
      )
    }
  </div>
  {floatingIcons.length > 0 && (
    <div class="topic-hero-floating-icons" aria-hidden="true">
      {floatingIcons.map((iconName, i) => {
        const cfg = floatingConfigs[i % floatingConfigs.length];
        return (
          <span
            class="floating-icon"
            style={`top: ${cfg.top}; right: ${cfg.right}; font-size: ${cfg.size}; animation-delay: ${cfg.delay}; animation-duration: ${cfg.duration};`}
          >
            <Icon name={iconName} size="1em" />
          </span>
        );
      })}
    </div>
  )}
  <div class="topic-hero-glow" aria-hidden="true"></div>
</section>

<style>
  .topic-hero {
    position: relative;
    overflow: hidden;
    padding: 3rem 2rem 2.5rem 2.5rem;
    border-radius: 0.75rem;
    margin-bottom: 2rem;
    background: linear-gradient(
      145deg,
      color-mix(in srgb, var(--topic-accent) 8%, transparent),
      color-mix(in srgb, var(--aspire-color-secondary) 4%, transparent),
      transparent 70%
    );
    border: 1px solid color-mix(in srgb, var(--topic-accent) 25%, transparent);
  }

  .topic-hero-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(color-mix(in srgb, var(--topic-accent) 6%, transparent) 1px, transparent 1px),
      linear-gradient(
        90deg,
        color-mix(in srgb, var(--topic-accent) 6%, transparent) 1px,
        transparent 1px
      );
    background-size: 48px 48px;
    mask-image: radial-gradient(ellipse 80% 60% at 50% 40%, black 30%, transparent 100%);
    pointer-events: none;
  }

  .topic-hero-content {
    position: relative;
    z-index: 1;
    max-width: 44rem;
    padding-left: 1rem;
  }

  .topic-hero-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 4rem;
    height: 4rem;
    border-radius: 0.75rem;
    background: color-mix(in srgb, var(--topic-accent) 18%, var(--sl-color-bg));
    border: 2px solid color-mix(in srgb, var(--topic-accent) 35%, transparent);
    color: var(--topic-accent);
    margin-bottom: 1.25rem;
  }

  .topic-hero-title {
    font-size: clamp(1.75rem, 4vw, 2.75rem);
    font-weight: 700;
    line-height: 1.15;
    letter-spacing: -0.02em;
    margin: 0 0 1rem;
    color: var(--sl-color-text);
  }

  .topic-hero-highlight {
    background: linear-gradient(90deg, var(--topic-accent) 0%, var(--aspire-color-secondary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  :global([data-theme='light']) .topic-hero-highlight {
    background: linear-gradient(90deg, var(--topic-accent) 0%, var(--aspire-color-primary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .topic-hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.2rem);
    line-height: 1.6;
    color: var(--sl-color-gray-3);
    margin: 0 0 1.75rem;
    max-width: 38rem;
  }

  :global([data-theme='light']) .topic-hero-subtitle {
    color: var(--sl-color-gray-2);
  }

  .topic-hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
  }

  .topic-btn {
    display: inline-flex;
    gap: 0.5rem;
    align-items: center;
    padding: 0.65rem 1.5rem;
    border-radius: 0.5rem;
    font-family: var(--sl-font-system);
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    transition: all 0.2s ease;
    white-space: nowrap;
    cursor: pointer;
  }

  .topic-btn:focus-visible {
    outline: 2px solid var(--sl-color-text);
    outline-offset: 2px;
  }

  .topic-btn-primary {
    background: var(--topic-accent);
    color: var(--sl-color-black);
  }

  .topic-btn-primary:hover {
    filter: brightness(110%);
    transform: translateY(-1px);
  }

  .topic-btn-secondary {
    background: color-mix(in srgb, var(--topic-accent) 12%, transparent);
    color: var(--sl-color-text);
    border: 1px solid color-mix(in srgb, var(--topic-accent) 30%, transparent);
  }

  .topic-btn-secondary:hover {
    background: color-mix(in srgb, var(--topic-accent) 20%, transparent);
    border-color: color-mix(in srgb, var(--topic-accent) 50%, transparent);
  }

  .topic-hero-glow {
    position: absolute;
    top: -30%;
    right: -10%;
    width: 50%;
    height: 160%;
    background: radial-gradient(
      ellipse at center,
      color-mix(in srgb, var(--topic-accent) 6%, transparent),
      transparent 70%
    );
    pointer-events: none;
  }

  /* Floating topic icons */
  .topic-hero-floating-icons {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .floating-icon {
    position: absolute;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--topic-accent);
    opacity: 0.1;
    animation: float-icon 7s ease-in-out infinite;
    filter: blur(0.5px);
  }

  .floating-icon :global(svg) {
    width: 1em;
    height: 1em;
  }

  @keyframes float-icon {
    0%,
    100% {
      transform: translateY(0) rotate(0deg) scale(1);
      opacity: 0.1;
    }
    25% {
      transform: translateY(-6px) rotate(3deg) scale(1.05);
      opacity: 0.15;
    }
    50% {
      transform: translateY(-12px) rotate(-2deg) scale(1.1);
      opacity: 0.18;
    }
    75% {
      transform: translateY(-5px) rotate(1deg) scale(1.02);
      opacity: 0.12;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .topic-btn {
      transition: none;
    }
    .topic-btn-primary:hover {
      transform: none;
    }
    .floating-icon {
      animation: none;
      opacity: 0.08;
    }
  }

  @media (max-width: 640px) {
    .topic-hero {
      padding: 2rem 1.25rem 2rem 1.5rem;
    }
    .topic-hero-content {
      padding-left: 0.5rem;
    }
  }
</style>

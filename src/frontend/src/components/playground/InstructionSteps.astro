---
interface Step {
    number: string;
    title: string;
    description: string;
}

interface Props {
    steps: Step[];
}

const { steps } = Astro.props;
---

<div class="instructions">
    {
        steps.map((step) => (
            <div class="instruction-step">
                <span class="step-number">{step.number}</span>
                <div class="step-content">
                    <h4>{step.title}</h4>
                    <p set:html={step.description} />
                </div>
            </div>
        ))
    }
</div>

<style>
    .instructions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
    }

    .instruction-step {
        display: flex;
        gap: 1rem;
        background: var(--sl-color-bg-nav);
        border: 1px solid var(--sl-color-gray-5);
        border-radius: 8px;
        padding: 1.5rem;
    }

    .step-number {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 48px;
        height: 48px;
        min-width: 48px;
        background: var(--sl-color-accent);
        color: white;
        border-radius: 50%;
        font-size: 1.5rem;
        font-weight: bold;
    }

    .step-content h4 {
        margin: 0 0 0.5rem 0;
        color: var(--sl-color-white);
        font-size: 1.125rem;
    }

    .step-content p {
        margin: 0;
        color: var(--sl-color-gray-3);
        font-size: 0.9375rem;
        line-height: 1.5;
    }

    .step-content :global(code) {
        background: var(--sl-color-bg);
        padding: 0.125rem 0.375rem;
        border-radius: 3px;
        font-family: var(--sl-font-mono);
        font-size: 0.875rem;
    }
</style>

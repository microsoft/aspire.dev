---
interface Props {
  title: string;
  tagline: string;
}

const { title, tagline } = Astro.props;
---

<div class="hero-section">
  <h1>{title}</h1>
  <p class="hero-tagline">{tagline}</p>
</div>

<style>
  .hero-section {
    text-align: center;
    padding: 3rem 1rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-section h1 {
    font-size: 3rem;
    margin: 0 0 1rem 0;
    background: linear-gradient(135deg, var(--sl-color-accent), var(--sl-color-purple));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-tagline {
    font-size: 1.5rem;
    color: var(--sl-color-gray-2);
    margin: 0 auto 2rem;
    max-width: 800px;
    line-height: 1.6;
  }
</style>

---
import DefaultSearch from "@astrojs/starlight/components/Search.astro";

import { isHomepage } from "@utils/helpers";
---

{
    isHomepage(Astro) ? (
        <></>
    ) : (
        <DefaultSearch><slot /></DefaultSearch>
    )
}

<style>
    :root {
        site-search > button,
        site-search > button > svg {
            color: var(--sl-color-gray-1);
        }

        site-search kbd {
            background: var(--sl-color-gray-1);
            color: var(--sl-color-gray-7);
        }
    }
</style>
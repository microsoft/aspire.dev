---
import YourChoiceSvg from '@assets/icons/your-choices.svg';
---

<div class="footer-column" role="contentinfo" aria-label="Legal">
  <h4 class="footer-heading">{Astro.locals.t('footer.legal' as any) || 'Legal'}</h4>
  <ul class="footer-links">
    <li>
      <a
        href="https://aka.ms/yourcaliforniaprivacychoices"
        target="_blank"
        rel="noopener noreferrer"
        class="privacy-choice"
      >
        <YourChoiceSvg />
        {Astro.locals.t('footer.privacyChoices')}
      </a>
    </li>
    <li>
      <a
        href="https://go.microsoft.com/fwlink/?LinkId=521839"
        target="_blank"
        rel="noopener noreferrer"
      >
        {Astro.locals.t('footer.privacyAndCookies')}
      </a>
    </li>
    <li>
      <a
        href="https://go.microsoft.com/fwlink/?LinkID=206977"
        target="_blank"
        rel="noopener noreferrer"
      >
        {Astro.locals.t('footer.terms')}
      </a>
    </li>
    <li>
      <a
        href="https://go.microsoft.com/fwlink/?linkid=2196228"
        target="_blank"
        rel="noopener noreferrer"
      >
        {Astro.locals.t('footer.trademarks')}
      </a>
    </li>
  </ul>
</div>

<style>
  .footer-column {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-heading {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--sl-color-white);
    margin: 0 0 0.25rem 0;
  }

  .footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .footer-links a {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    color: var(--sl-color-gray-2);
    text-decoration: none;
    font-size: var(--sl-text-sm);
    transition: color 0.15s ease;
  }

  .footer-links a:hover {
    color: var(--sl-color-white);
  }

  .privacy-choice {
    gap: 0.5rem;
  }
</style>

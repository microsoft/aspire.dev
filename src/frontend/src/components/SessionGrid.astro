---
import SessionCard, { type Props as SessionProps } from './SessionCard.astro';

interface Props {
  sessions: SessionProps[];
}
---

<ul class="session-list not-content">
  {Astro.props.sessions.map((session, i) => <SessionCard {...session} index={i} />)}
</ul>

<style>
  .session-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }
</style>

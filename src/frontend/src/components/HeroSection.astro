---
import { Icon } from '@astrojs/starlight/components';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  highlight?: string;
  subtitle: string;
  primaryCta?: { label: string; href: string };
  secondaryCta?: { label: string; href: string };
  logo?: ImageMetadata;
}

const { title, highlight, subtitle, primaryCta, secondaryCta, logo } = Astro.props;

// Floating icons relevant to docs: distributed apps, config, building, deploying
const floatingIcons = [
  { icon: 'open-book', top: '12%', right: '10%', size: '1.35rem', delay: '0s', duration: '7.2s' },
  { icon: 'puzzle', top: '65%', right: '24%', size: '1.15rem', delay: '1.6s', duration: '8.8s' },
  { icon: 'rocket', top: '22%', right: '48%', size: '1.4rem', delay: '3.8s', duration: '6.6s' },
  { icon: 'setting', top: '76%', right: '7%', size: '1.05rem', delay: '4.4s', duration: '7.8s' },
  { icon: 'seti:config', top: '40%', right: '4%', size: '1.1rem', delay: '2.4s', duration: '9.2s' },
] as const;
---

<section class="hero-section not-content">
  <div class="hero-grid" aria-hidden="true"></div>
  {logo && (
    <div class="hero-logo" aria-hidden="true">
      <Image src={logo} alt="Logo" width={120} height={120} />
    </div>
  )}
  <div class="hero-content">
    <h1 class="hero-title">
      {title}{' '}
      {highlight && <span class="hero-highlight">{highlight}</span>}
    </h1>
    <p class="hero-subtitle">{subtitle}</p>
    {
      (primaryCta || secondaryCta) && (
        <div class="hero-actions">
          {primaryCta && (
            <a href={primaryCta.href} class="hero-btn hero-btn-primary">
              {primaryCta.label}
              <Icon name="right-arrow" size="1.25rem" />
            </a>
          )}
          {secondaryCta && (
            <a href={secondaryCta.href} class="hero-btn hero-btn-secondary">
              {secondaryCta.label}
            </a>
          )}
        </div>
      )
    }
  </div>
  <div class="hero-floating-icons" aria-hidden="true">
    {floatingIcons.map((fi) => (
      <span
        class="floating-icon"
        style={`top: ${fi.top}; right: ${fi.right}; font-size: ${fi.size}; animation-delay: ${fi.delay}; animation-duration: ${fi.duration};`}
      >
        <Icon name={fi.icon} size="1em" />
      </span>
    ))}
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    overflow: hidden;
    padding: 3rem 2rem 2.5rem 2.5rem;
    border-radius: 0.75rem;
    margin-bottom: 2rem;
    background: linear-gradient(
      145deg,
      color-mix(in srgb, var(--aspire-color-purple) 8%, transparent),
      color-mix(in srgb, var(--aspire-color-secondary) 4%, transparent),
      transparent 70%
    );
    border: 1px solid color-mix(in srgb, var(--aspire-color-primary) 25%, transparent);
  }

  .hero-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(
        color-mix(in srgb, var(--aspire-color-primary) 6%, transparent) 1px,
        transparent 1px
      ),
      linear-gradient(
        90deg,
        color-mix(in srgb, var(--aspire-color-primary) 6%, transparent) 1px,
        transparent 1px
      );
    background-size: 48px 48px;
    mask-image: radial-gradient(ellipse 80% 60% at 50% 40%, black 30%, transparent 100%);
    pointer-events: none;
  }

  .hero-logo {
    position: relative;
    z-index: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 4rem;
    height: 4rem;
    border-radius: 0.75rem;
    background: color-mix(in srgb, var(--aspire-color-primary) 18%, var(--sl-color-bg));
    border: 2px solid color-mix(in srgb, var(--aspire-color-primary) 35%, transparent);
    margin-bottom: 1.25rem;
    margin-left: 1rem;
  }

  .hero-logo :global(img) {
    width: 2.25rem;
    height: 2.25rem;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 44rem;
    padding-left: 1rem;
  }

  .hero-title {
    font-size: clamp(1.75rem, 4vw, 2.75rem);
    font-weight: 700;
    line-height: 1.15;
    letter-spacing: -0.02em;
    margin: 0 0 1rem;
    color: var(--sl-color-text);
  }

  .hero-highlight {
    background: linear-gradient(
      90deg,
      #7455dd 0%,
      #9780e5 40%,
      #b9aaee 70%,
      #dcd5f6 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  :global([data-theme='light']) .hero-highlight {
    background: linear-gradient(
      90deg,
      #512bd4 0%,
      #7455dd 50%,
      #9780e5 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.2rem);
    line-height: 1.6;
    color: var(--sl-color-gray-3);
    margin: 0 0 1.75rem;
    max-width: 38rem;
  }

  :global([data-theme='light']) .hero-subtitle {
    color: var(--sl-color-gray-2);
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
  }

  .hero-btn {
    display: inline-flex;
    gap: 0.5rem;
    align-items: center;
    padding: 0.65rem 1.5rem;
    border-radius: 0.5rem;
    font-family: var(--sl-font-system);
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    transition: all 0.2s ease;
    white-space: nowrap;
    cursor: pointer;
  }

  .hero-btn:focus-visible {
    outline: 2px solid var(--sl-color-text);
    outline-offset: 2px;
  }

  .hero-btn-primary {
    background: var(--aspire-color-primary);
    color: #ffffff;
  }

  .hero-btn-primary:hover {
    background: var(--aspire-color-purple);
    transform: translateY(-1px);
  }

  .hero-btn-secondary {
    background: color-mix(in srgb, var(--aspire-color-primary) 12%, transparent);
    color: var(--sl-color-text);
    border: 1px solid color-mix(in srgb, var(--aspire-color-primary) 30%, transparent);
  }

  .hero-btn-secondary:hover {
    background: color-mix(in srgb, var(--aspire-color-primary) 20%, transparent);
    border-color: color-mix(in srgb, var(--aspire-color-primary) 50%, transparent);
  }

  /* Floating topic icons */
  .hero-floating-icons {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .floating-icon {
    position: absolute;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--aspire-color-primary);
    opacity: 0.1;
    animation: float-icon 7s ease-in-out infinite;
    filter: blur(0.5px);
  }

  .floating-icon :global(svg) {
    width: 1em;
    height: 1em;
  }

  @keyframes float-icon {
    0%,
    100% {
      transform: translateY(0) rotate(0deg) scale(1);
      opacity: 0.1;
    }
    25% {
      transform: translateY(-6px) rotate(3deg) scale(1.05);
      opacity: 0.15;
    }
    50% {
      transform: translateY(-12px) rotate(-2deg) scale(1.1);
      opacity: 0.18;
    }
    75% {
      transform: translateY(-5px) rotate(1deg) scale(1.02);
      opacity: 0.12;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-btn {
      transition: none;
    }
    .hero-btn-primary:hover {
      transform: none;
    }
    .floating-icon {
      animation: none;
      opacity: 0.08;
    }
  }

  @media (max-width: 640px) {
    .hero-section {
      padding: 2rem 1.25rem 2rem 1.5rem;
    }
    .hero-content {
      padding-left: 0.5rem;
    }
  }
</style>

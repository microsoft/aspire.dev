---
import { Icon } from '@astrojs/starlight/components';

interface Props {
  title: string;
  highlight?: string;
  subtitle: string;
  primaryCta?: { label: string; href: string };
  secondaryCta?: { label: string; href: string };
}

const { title, highlight, subtitle, primaryCta, secondaryCta } = Astro.props;
---

<section class="hero-section not-content">
  <div class="hero-glow" aria-hidden="true"></div>
  <div class="hero-grid" aria-hidden="true"></div>
  <div class="hero-content">
    <h1 class="hero-title">
      {title}{' '}
      {highlight && <span class="hero-highlight">{highlight}</span>}
    </h1>
    <p class="hero-subtitle">{subtitle}</p>
    {
      (primaryCta || secondaryCta) && (
        <div class="hero-actions">
          {primaryCta && (
            <a href={primaryCta.href} class="hero-btn hero-btn-primary">
              {primaryCta.label}
              <Icon name="right-arrow" size="1.25rem" />
            </a>
          )}
          {secondaryCta && (
            <a href={secondaryCta.href} class="hero-btn hero-btn-secondary">
              {secondaryCta.label}
            </a>
          )}
        </div>
      )
    }
  </div>
  <div class="hero-particles" aria-hidden="true">
    <span class="particle p1"></span>
    <span class="particle p2"></span>
    <span class="particle p3"></span>
    <span class="particle p4"></span>
    <span class="particle p5"></span>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    overflow: hidden;
    padding: 3rem 2rem 2.5rem 2.5rem;
    border-radius: 0.75rem;
    margin-bottom: 2rem;
    background: linear-gradient(
      145deg,
      color-mix(in srgb, var(--aspire-color-purple) 18%, transparent),
      color-mix(in srgb, var(--aspire-color-secondary) 8%, transparent),
      transparent 70%
    );
    border: 1px solid color-mix(in srgb, var(--aspire-color-primary) 20%, transparent);
  }

  .hero-glow {
    position: absolute;
    top: -40%;
    right: -20%;
    width: 60%;
    height: 120%;
    background: radial-gradient(
      ellipse at center,
      color-mix(in srgb, var(--aspire-color-primary) 12%, transparent) 0%,
      transparent 70%
    );
    pointer-events: none;
    filter: blur(40px);
  }

  .hero-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(
        color-mix(in srgb, var(--aspire-color-primary) 6%, transparent) 1px,
        transparent 1px
      ),
      linear-gradient(
        90deg,
        color-mix(in srgb, var(--aspire-color-primary) 6%, transparent) 1px,
        transparent 1px
      );
    background-size: 48px 48px;
    mask-image: radial-gradient(ellipse 80% 60% at 50% 40%, black 30%, transparent 100%);
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 44rem;
    padding-left: 1rem;
  }

  .hero-title {
    font-size: clamp(1.75rem, 4vw, 2.75rem);
    font-weight: 700;
    line-height: 1.15;
    letter-spacing: -0.02em;
    margin: 0 0 1rem;
    color: var(--sl-color-text);
  }

  .hero-highlight {
    background: var(--gradient-purple-magenta);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.2rem);
    line-height: 1.6;
    color: var(--sl-color-gray-3);
    margin: 0 0 1.75rem;
    max-width: 38rem;
  }

  :global([data-theme='light']) .hero-subtitle {
    color: var(--sl-color-gray-2);
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
  }

  .hero-btn {
    display: inline-flex;
    gap: 0.5rem;
    align-items: center;
    padding: 0.65rem 1.5rem;
    border-radius: 0.5rem;
    font-family: var(--sl-font-system);
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    transition: all 0.2s ease;
    white-space: nowrap;
    cursor: pointer;
  }

  .hero-btn:focus-visible {
    outline: 2px solid var(--sl-color-text);
    outline-offset: 2px;
  }

  .hero-btn-primary {
    background: var(--aspire-color-primary);
    color: #ffffff;
    box-shadow: 0 2px 12px color-mix(in srgb, var(--aspire-color-primary) 30%, transparent);
  }

  .hero-btn-primary:hover {
    background: var(--aspire-color-purple);
    transform: translateY(-1px);
    box-shadow: 0 4px 20px color-mix(in srgb, var(--aspire-color-primary) 45%, transparent);
  }

  .hero-btn-secondary {
    background: color-mix(in srgb, var(--aspire-color-primary) 12%, transparent);
    color: var(--sl-color-text);
    border: 1px solid color-mix(in srgb, var(--aspire-color-primary) 30%, transparent);
  }

  .hero-btn-secondary:hover {
    background: color-mix(in srgb, var(--aspire-color-primary) 20%, transparent);
    border-color: color-mix(in srgb, var(--aspire-color-primary) 50%, transparent);
  }

  /* Floating particles */
  .hero-particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .particle {
    position: absolute;
    border-radius: 50%;
    opacity: 0.4;
    animation: float 6s ease-in-out infinite;
  }

  .p1 {
    width: 6px;
    height: 6px;
    background: var(--aspire-color-primary);
    top: 20%;
    right: 15%;
    animation-delay: 0s;
  }

  .p2 {
    width: 4px;
    height: 4px;
    background: var(--color-magenta);
    top: 60%;
    right: 25%;
    animation-delay: 1.5s;
  }

  .p3 {
    width: 5px;
    height: 5px;
    background: var(--color-cyan);
    top: 35%;
    right: 40%;
    animation-delay: 3s;
  }

  .p4 {
    width: 3px;
    height: 3px;
    background: var(--aspire-color-secondary);
    top: 75%;
    right: 10%;
    animation-delay: 4s;
  }

  .p5 {
    width: 5px;
    height: 5px;
    background: var(--color-flamingo);
    top: 15%;
    right: 55%;
    animation-delay: 2s;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0) scale(1);
      opacity: 0.4;
    }
    50% {
      transform: translateY(-18px) scale(1.3);
      opacity: 0.7;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .particle {
      animation: none;
    }
  }

  @media (max-width: 640px) {
    .hero-section {
      padding: 2rem 1.25rem 2rem 1.5rem;
    }
    .hero-content {
      padding-left: 0.5rem;
    }
  }
</style>

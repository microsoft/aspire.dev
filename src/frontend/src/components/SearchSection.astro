---
import Search from '@astrojs/starlight/components/Search.astro';
---

<div class="search-section">
  <div class="search-content">
    <span class="search-bg-icon" aria-hidden="true">üîç</span>
    <div class="search-header">
      <h3 class="search-title">Looking for something specific?</h3>
    </div>
    <p class="search-description">
      Search our comprehensive docs, guides, and integration references to find exactly what you
      need.
    </p>
    <div class="search-wrapper">
      <Search />
    </div>
  </div>
</div>

<style>
  .search-section {
    max-width: 100%;
    margin: 4rem auto;
    padding: 0;
  }

  .search-content {
    background:
      radial-gradient(
        circle at 20% 50%,
        color-mix(in srgb, var(--aspire-color-primary) 18%, transparent),
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 50%,
        color-mix(in srgb, var(--color-blue) 15%, transparent),
        transparent 50%
      ),
      linear-gradient(
        135deg,
        color-mix(in srgb, var(--aspire-color-primary) 12%, transparent),
        color-mix(in srgb, var(--aspire-color-secondary) 8%, transparent)
      );
    border: 1px solid color-mix(in srgb, var(--aspire-color-primary) 35%, transparent);
    border-radius: 1.5rem;
    padding: 4rem 3rem;
    box-shadow:
      0 8px 32px color-mix(in srgb, var(--aspire-color-primary) 15%, transparent),
      0 0 0 1px color-mix(in srgb, var(--aspire-color-primary) 8%, transparent) inset;
    position: relative;
    overflow: hidden;
  }

  .search-content::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      color-mix(in srgb, var(--aspire-color-secondary) 40%, transparent),
      transparent
    );
  }

  .search-bg-icon {
    position: absolute;
    font-size: 18.5rem;
    right: 66.67%;
    top: 50%;
    transform: translate(50%, -50%);
    opacity: 0.08;
    filter: blur(3px);
    pointer-events: none;
    z-index: 0;
    line-height: 1;
  }

  .search-header {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1rem;
    position: relative;
    z-index: 1;
  }

  .search-title {
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--sl-color-white);
    margin: 0;
    text-shadow: 0 2px 8px color-mix(in srgb, var(--aspire-color-black) 30%, transparent);
  }

  .search-description {
    text-align: center;
    font-size: 1.25rem;
    line-height: 1.7;
    color: var(--sl-color-gray-2);
    margin: 0 0 2.5rem 0;
    max-width: 50rem;
    margin-left: auto;
    margin-right: auto;
    position: relative;
    z-index: 1;
  }

  .search-wrapper {
    position: relative;
    max-width: 72rem;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    z-index: 1;
  }

  .search-wrapper :global(site-search button) {
    width: 100%;
    font-size: 1.125rem;
    padding: 1.125rem 1.5rem;
    background: color-mix(in srgb, var(--sl-color-black) 40%, transparent);
    backdrop-filter: blur(8px);
    border: 1px solid color-mix(in srgb, var(--aspire-color-primary) 25%, transparent);
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .search-wrapper :global(site-search button kbd kbd) {
    font-family: var(--sl-font-system-mono);
    transition: all 0.15s ease;
  }

  .search-wrapper :global(site-search button:hover kbd kbd) {
    border-color: color-mix(in srgb, var(--sl-color-white) 35%, transparent);
  }

  .search-content:hover .search-wrapper :global(site-search button) {
    border-color: color-mix(in srgb, var(--aspire-color-primary) 50%, transparent);
    box-shadow:
      0 0 0 3px color-mix(in srgb, var(--aspire-color-primary) 15%, transparent),
      0 0 20px color-mix(in srgb, var(--aspire-color-primary) 25%, transparent),
      0 4px 16px color-mix(in srgb, var(--aspire-color-primary) 20%, transparent);
    animation: search-glow 2s ease-in-out infinite;
  }

  @keyframes search-glow {
    0%,
    100% {
      box-shadow:
        0 0 0 3px color-mix(in srgb, var(--aspire-color-primary) 15%, transparent),
        0 0 20px color-mix(in srgb, var(--aspire-color-primary) 25%, transparent),
        0 4px 16px color-mix(in srgb, var(--aspire-color-primary) 20%, transparent);
    }
    50% {
      box-shadow:
        0 0 0 4px color-mix(in srgb, var(--aspire-color-primary) 20%, transparent),
        0 0 30px color-mix(in srgb, var(--aspire-color-primary) 35%, transparent),
        0 6px 24px color-mix(in srgb, var(--aspire-color-primary) 30%, transparent);
    }
  }

  .search-wrapper :global(site-search button:hover) {
    background: color-mix(in srgb, var(--sl-color-black) 30%, transparent);
    cursor: pointer;
  }

  @media (max-width: 768px) {
    .search-content {
      padding: 3rem 2rem;
      border-radius: 1rem;
    }

    .search-bg-icon {
      font-size: 12.5rem;
    }

    .search-title {
      font-size: 1.25rem;
    }

    .search-description {
      font-size: 1rem;
      margin-bottom: 2rem;
    }

    .search-wrapper :global(site-search button) {
      font-size: 1rem;
      padding: 0.875rem 1.25rem;
    }
  }
</style>

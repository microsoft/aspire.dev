{
    "name": "root",
    "private": true,
    "description": "Root-level package.json delegating to src/frontend.",
    "scripts": {
        "install": "cd src/frontend && pnpm i",
        "dev": "cd src/frontend && pnpm run dev",
        "build": "cd src/frontend && pnpm run build",
        "preview": "cd src/frontend && pnpm run preview",
        "lint": "cd src/frontend && pnpm run lint",
        "format": "cd src/frontend && pnpm run format",
        "update:all": "cd src/frontend && pnpm run update:all"
    }
}